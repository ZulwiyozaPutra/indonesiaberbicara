<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/rl_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@android:drawable/screen_background_dark_transparent">

            <ImageView
                android:id="@+id/iv_itemfoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/cilember" />

        </FrameLayout>


        <ImageView
            android:id="@+id/iv_itempanah"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right_black_24dp" />

        <TextView
            android:id="@+id/tv_itemjudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/iv_itempanah"
            android:lineSpacingExtra="6sp"
            android:paddingLeft="10dp"
            android:text="Mencari SN, Berbagai Hal yang Menyulitkan KPK"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_tanggalkesimpulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="107dp"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/rounded" />

            <TextView
                android:id="@+id/tv_itemtanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="20dp"
                android:paddingTop="1dp"
                android:text="17 Oktober 2017"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>